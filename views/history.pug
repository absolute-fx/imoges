extends layout

block content
    section
        .container
            .row
                .col-md-3
                    include sidenav
                .col-md-9
                    .heading-title.heading-line-single
                        h3
                            | Historique de la&nbsp;
                            span société
                    p
                        - prjNbr = history.length
                        | La société&nbsp;
                        strong Imoges
                        |&nbsp;a été fondée en &nbsp;
                        strong 2006
                        |&nbsp;et a actuellement porté de nombreux projets immobiliers sur Ecaussinnes, Soignies et Braine le Comte.
                        br
                        | Vous pourrez trouver ci-dessous l'historique des différentes constructions de la société&nbsp;
                        strong Imoges
                        |.
    section
        .container
            ul.timeline_center.list-unstyled
                each h in history
                    li
                        h3.timeline-header
                            span #{tools.historyDate(h.project_start_build_date)}
                            | #{h.project_title}
                        .timeline-desc.timeline-desc-line #{h.project_city}
                        a(href=`/project?id=${ h.id }` class="btn btn-xs btn-default margin-top-20") Voir le projet