extends partner_layout
block content
    .container
        .row
            .col-md-4.col-md-offset-4
                .panel.panel-default.margin-top-20
                    .panel-heading Espace partenaire
                    .panel-body
                        form.sky-form#login_form
                            .clearfix
                                .form-group
                                    label Email
                                    label.input.margin-bottom-10
                                        i.ico-append.fa.fa-envelope
                                        input(required type="email" name="username")
                                        b.tooltip.tooltip-bottom-right Nécessaire pour vous connecter
                                .form-group
                                    label Mot de passe
                                    label.input.margin-bottom-10
                                        i.ico-append.fa.fa-lock
                                        input(required type="password" name="password")
                                        b.tooltip.tooltip-bottom-right Nécessaire pour vous connecter
                            .row
                                .col-md-6.col-sm-6.col-xs-6
                                    .form-tip.pt-20
                                        a.no-text-decoration.size-13.margin-top-10.block(href="/auth/forgottenpass") Mot de passe oublié?
                                .col-md-6.col-sm-6.col-xs-6.text-right
                                    button.btn.btn-primary(type="submit")
                                        i.fa.fa-check
                                        | Connexion