#!/usr/bin/env node

/**
 * Module dependencies.
 */

const express = require('express');
const vhost = require('vhost');
const app = require('../app');

const server = express();
let port = normalizePort(process.env.PORT || '3000');

/**
 * Module dependencies.
 */

let testApp = vhost(process.env.IP, app);
server.use(testApp);
console.log('Allways Data OK');


server.listen(port);

function normalizePort(val) {
    let port = parseInt(val, 10);

    if (isNaN(port)) {
        // named pipe
        return val;
    }

    if (port >= 0) {
        // port number
        return port;
    }

    return false;
}